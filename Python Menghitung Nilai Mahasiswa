print("PROGRAM MENGHITUNG NILAI KELULUSAN 3 MATKUL MAHASISWA")
print("-----------------------------------------------------")

n = int(input("\nInputkan Jumlah Matkul: "))


print() #Membuat baris baru
data = []
jum = 0

for i in range(0, n):
    temp = int(input("Masukkan Nilai Matkul ke-%d: " % (i+1)))
    data.append(temp)
    jum += data[i]
    rata2 = jum / n

print("\nRata-Rata Nilai  = %0.2f" % rata2)

